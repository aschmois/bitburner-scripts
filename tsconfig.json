{
  "include": ["NetscriptDefinitions.d.ts", "global.d.ts", "src/**/*"],
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "sourceRoot": "http://localhost:8000/sources/",
    "strict": true,
    "rootDir": "src/",
    "outDir": "out/",
    "baseUrl": "src/",
    "paths": {
      "/*": ["*"],
      "@ns": ["../NetscriptDefinitions.d.ts"]
    },
    "lib": ["DOM"],
    "skipLibCheck": true,
    "allowJs": true
  }
}
