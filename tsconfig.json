{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "module": "es6",
    "lib": ["ES2020", "DOM"],
    "outDir": "out",
    "strict": true,
    "inlineSourceMap": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "**/node_modules/*", "out"],
  "include": ["src/**/*", "globals.d.ts"]
}
